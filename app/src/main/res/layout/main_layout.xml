<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/main_layout__toolbar"
            style="@style/MainToolbar"
    />

    <FrameLayout
            android:id="@+id/main_layout__main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
                android:id="@+id/main_layout__fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <include
                android:id="@+id/main_layout__main_progress_bar"
                layout="@layout/main_progress_bar_layout"
                android:visibility="gone"/>

    </FrameLayout>

</LinearLayout>