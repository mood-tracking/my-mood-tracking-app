<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoginButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:width">@dimen/login_button_width</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
    <style name="LoginButton.White">
        <item name="android:background">@drawable/login_solid_button_background</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>
    <style name="LoginButton.Blue">
        <item name="android:background">@drawable/login_corner_button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="LoginEdit">
        <item name="android:layout_width">@dimen/login_edit_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_corner_button_background</item>
        <item name="android:drawablePadding">@dimen/login_button_drawable_padding</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_marginStart">@dimen/login_edit_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/login_edit_margin_horizontal</item>
        <item name="android:padding">@dimen/login_edit_padding</item>
    </style>
    <style name="LoginEdit.Email">
        <item name="android:drawableStart">@drawable/ic_email</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/email_here</item>
    </style>
    <style name="LoginEdit.Password">
        <item name="android:drawableStart">@drawable/ic_lock</item>
        <item name="android:hint">@string/password_here</item>
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="tag_tv">
        <item name="android:textSize">@dimen/tag_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="tag_button">
        <item name="android:height">@dimen/tag_button_height</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/tag_text_size</item>
    </style>
    <style name="toolbar">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="calendar_card">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">67dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    <style name="chart_title">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="AppNameTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:shadowColor">@color/blue</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/app_name_size</item>
    </style>
    <style name="AppLogo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_app_logo</item>
        <item name="android:contentDescription">@string/app_logo_description</item>
    </style>
</resources>
